/* components/calendar.wxss */
.calendar-box{ width: 619rpx; padding: 0 40rpx; background: #fff; overflow: hidden; box-sizing: border-box; }

.calendar-date{ width: 100%; height: 73rpx; margin-top: 19rpx; }
.calendar-date-time{ width: 100%; height: 100%; font-size: 28rpx; color: rgb(2, 0, 92); font-weight: bold; letter-spacing: 2rpx; }
.calendar-date-prev{ width: 70rpx; height: 100%; font-size: 24rpx; color: #000; left: 0; top: 0; }
.calendar-date-next{ width: 70rpx; height: 100%; font-size: 24rpx; color: #000; right: 0; top: 0; }

.calendar-week{ width: 100%; display: flex; }
.calendar-week-single{ width: 77rpx; height: 46rpx; font-size: 24rpx; color: rgb(2, 0, 92); font-weight: bold; }

.calendar-day{ width: 100%; display: flex; flex-wrap: wrap; }
.calendar-day-single{ width: 77rpx; height: 73rpx; font-size: 24rpx; color: rgb(2, 0, 92); font-weight: bold; }
.color1{ color: #999; }
.calendar-day-single.red::after{ content: ''; width: 10rpx; height: 10rpx; border-radius: 50%; background: red; position: absolute; top: 20rpx; right: 15rpx; }
.calendar-day-single.choose::before{ content: ''; width: 50rpx; height: 50rpx; border-radius: 50%; background: rgba(179, 171, 171,0.5); position: absolute; top: 50%; left: 50%; transform: translate(-50%,-50%); }

.calendar-btn{ width: 300rpx; height: 70rpx; font-size: 30rpx; color: #fff; background: rgba(2, 0, 92,0.5); margin: 30rpx auto; }




